<h3>以下の内容で、送信する。</h3>
<%= form_with(model: @wine, url: wines_path, local: true) do |form| %>
  <%= form.hidden_field :image %>
  <%= form.hidden_field :price %>
  <%= form.hidden_field :color %>
  <%= form.hidden_field :variety %>
  <%= form.hidden_field :country %>
  <%= form.hidden_field :origin %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :vintage %>
  <%= form.hidden_field :taste %>
  <%= form.hidden_field :ranking %>
  <%= form.hidden_field :overview %>

  <p>画像:<%= @wine.image %></p>
  <p>価格:<%= @wine.price %></p>
  <p>色:<%= @wine.color %></p>
  <p>ぶどう種類:<%= @wine.variety %></p>
  <p>原産国:<%= @wine.country %></p>
  <p>生産地:<%= @wine.origin %></p>
  <p>名前:<%= @wine.name %></p>
  <p>収穫年:<%= @wine.vintage %></p>
  <p>味:<%= @wine.taste %></p>
  <p>評価:<%= @wine.ranking %></p>
  <p>紹介コメント欄:<%= @wine.overview %></p>
  
  <%= form.submit  "投稿する" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>
